{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@repositories": [
        "./src/repositories/index.ts"
      ],
      "@interfaces": [
        "./src/repositories/interfaces/index.ts"
      ],
      "@controllers": [
        "./src/controllers/index.ts"
      ],
      "@use-cases": [
        "./src/use-cases/index.ts"
      ],
      "@entities": [
        "./src/entities/index.ts"
      ],
      "@utils": [
        "./src/utils/index.ts"
      ],
      "@middlewares": [
        "./src/middlewares/index.ts"
      ],
      "@types": [
        "./src/types/index.ts"
      ],
      "@schemas": [
        "./src/schemas/index.ts"
      ],
      "@tests": [
        "./src/tests/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/use-cases/task/toggle-task-use-casets"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}