{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@repositories": [
        "src/modules/routine/repositories/index.ts"
      ],
      "@interfaces": [
        "src/modules/routine/repositories/interfaces/index.ts"
      ],
      "@tasks/controllers": [
        "src/modules/routine/controllers/index.ts"
      ],
      "@auth/controllers": [
        "src/modules/user/controllers/index.ts"
      ],
      "@services": [
        "src/modules/routine/services/index.ts"
      ],
      "@entities": [
        "src/modules/routine/entities/index.ts"
      ],
      "@presenters": [
        "src/modules/routine/presenters/index.ts"
      ],
      "@tasks/schemas": [
        "src/modules/routine/validators/index.ts"
      ],
      "@auth/schemas": [
        "src/modules/user/validators/index.ts"
      ],
      "@types": [
        "src/types/index.ts"
      ],
      "@errors": [
        "src/errors/index.ts"
      ],
      "@middlewares": [
        "src/middlewares/index.ts"
      ],
      "@lib": [
        "src/lib/index.ts"
      ],
      "@prisma": [
        "src/lib/prisma.ts"
      ],
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/types/user.types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}