{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@repositories": [
        "src/modules/tasks/repositories/index.ts"
      ],
      "@interfaces": [
        "src/modules/tasks/repositories/interfaces/index.ts"
      ],
      "@controllers": [
        "src/modules/tasks/controllers/index.ts"
      ],
      "@use-cases": [
        "src/modules/tasks/use-cases/index.ts"
      ],
      "@entities": [
        "src/modules/tasks/entities/index.ts"
      ],
      "@presenters": [
        "src/modules/tasks/presenters/index.ts"
      ],
      "@schemas": [
        "src/modules/tasks/schemas/index.ts"
      ],
      "@types": [
        "src/types/index.ts"
      ],
      "@errors": [
        "src/errors/index.ts"
      ],
      "@lib": [
        "src/lib/index.ts"
      ],
      "@prisma": [
        "src/lib/prisma.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}