// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}




model User {
  id           String   @id @default(cuid())
  name         String
  email        String @unique 
  password     String

  level Int @default(1)
  xp Int @default(0)
  stars Int @default(0)
 
  routines Routine[]

  
  createdAt    DateTime @default(now())
  
}

model Routine {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  date            DateTime

  routineStatus   RoutineStatus   @default(PENDING)

  totalTasks Int @default(0)
  completedTasks Int @default(0)
  
  tasks           Task[]
  metrics         RoutineMetrics?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([userId, date])
}

model RoutineMetrics {
  id                    String   @id @default(cuid())
  routineId             String   @unique
  routine               Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)

  completionRate        Float    @default(0)
  avgTimePerTask        Float    @default(0)
  timeAccuracy          Float    @default(0)
  categoryDistribution  String   @default("{}")
  totalSeconds          Int      @default(0)
  
  xpEarned              Int      @default(0)
  starEarned            Boolean  @default(false)
  
  highlights            String   @default("[]")
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}


model Task {
  id           String   @id @default(cuid())

  routineId    String
  routine      Routine  @relation(fields: [routineId], references: [id])
  
  content      String
  status       StatusTask   @default(PENDING)
  category     Category

  plannedStart     DateTime
  plannedEnd      DateTime
  durationSec     Int      @default(0)

  totalSeconds Int      @default(0)

  startedAt    DateTime?
  finishedAt   DateTime?
  cancelledAt DateTime?
  actualDurationSec Int @default(0)
  
  

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}


enum StatusTask {
  PENDING
  INPROGRESS
  DONE
  PAUSED
  CANCELLED
}

enum RoutineStatus {
  PENDING
  INPROGRESS
  DONE
  PARTIAL
}

enum Category {
  WORK
  PERSONAL
  STUDY
  BREAK
}